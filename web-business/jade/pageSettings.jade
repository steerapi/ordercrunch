include businessInfo
div(data-role='header', data-position='fixed', data-tap-toggle='false', data-update-page-padding='false')
  a(href='#', data-slidemenu='#slidemenu', data-slideopen='false', data-icon='smico', data-corners='false', data-iconpos='notext') Menu
  h1 Manage Settings
div(data-role='content')
  form
    ul(data-role="listview", data-inset="true")
      li(data-role="fieldcontain")
        fieldset(data-role="controlgroup",data-type="horizontal", for="maxemployee")
          legend Maximum number of employees working simultaneously:
          input(type='text', ng-model="business.maxemployee", name='maxemployee', value='',placeholder="5")
      li(data-role="fieldcontain")
        fieldset(data-role="controlgroup",data-type="horizontal",for="avgtime") 
          legend Average time to fulfill an order (min):
          input(type='text', ng-model="business.avgtime", name='avgtime', value='', placeholder="15")
      li(data-role="fieldcontain")
        fieldset(data-role="controlgroup",data-type="horizontal",for="maxorders") 
          legend Maximum number of orders that can be fulfilled in 15 minutes: 
          input(type='text', ng-model="business.maxorders", name='maxorders', value='',placeholder="10")
      li(data-role="fieldcontain")
        fieldset(data-role="controlgroup",data-type="horizontal", for="maxdiscount")
          legend Maximum discount per order (%):
          input(type='text', ng-model="business.maxdiscount", name='maxdiscount', value='',placeholder="10")
    ul.collapsible-list(data-role="listview", data-inset="true")
      div(data-role="collapsible")
        h3 Account Settings
        ul(class="ui-listview ui-listview-inset ui-corner-all ui-shadow")
          mixin businessInfo('ui-body ui-br ui-li ui-li-static ui-btn-up-c ui-corner-top')
    include ../../shared/jade/setPassword
