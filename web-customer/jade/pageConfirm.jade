div(data-role='header', data-position='fixed', data-tap-toggle='false', data-update-page-padding='false')
  a(href='#', data-slidemenu='#slidemenu', data-slideopen='false', data-icon='smico', data-corners='false', data-iconpos='notext') Menu
  h1 Confirmation
div(data-role='content', data-theme="c")
  ul(ng-repeat="order in menuCtrl.order", data-role='listview', data-inset='true')
    li(data-icon="false",data-role="fieldcontain")
      .ui-body
        include ../../shared/jade/orderInfo
    li(data-icon="false",ng-repeat="item in order.items",data-role="fieldcontain")
      a(href="", ng-click="menuCtrl.addItem(item)")
        div(style="float:left;white-space:normal;")
          div {{item.qty}} {{item.itemName}} 
        div(style="float:right;")
          div ${{item.price}}
    li(data-icon="false",data-role="fieldcontain")
      a(href="")
        div(style="float:left;white-space:normal;")
          | Total:
        div(style="float:right;")
          | ${{order.total}}
    li(data-icon="false",data-role="fieldcontain")
      .ui-body
        button(data-role='button', ng-click="menuCtrl.back()")
          | OK