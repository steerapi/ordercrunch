div(data-role='header', data-position='fixed', data-tap-toggle='false', data-update-page-padding='false')
  a(href='#', data-slidemenu='#slidemenu', data-slideopen='false', data-icon='smico', data-corners='false', data-iconpos='notext') Menu
  h1 Select Business
div(data-role='content', data-theme="c")
  ul(data-role='listview', data-filter="true", data-inset='true')
    li(ng-repeat="employee in employeesCtrl.employees")
      a
        h1 {{employee.businessName}}
        span(data-mini="true", data-inline="true", data-role="button", data-icon="delete", ng-click="employeesCtrl.deleteEmployee($index)")
          | Delete
      a
        a(data-theme="a",href='#pageShiftCalendar', ng-click="employeesCtrl.employee=employee")
